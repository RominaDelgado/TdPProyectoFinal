<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00DBD8D8"
    tools:context="com.example.MovieNote.Informacion">

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6DCDF"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:text="Información de aplicación"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#566361"
            android:translationX="50dp"
            android:translationY="10dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:text="             Desarrollada por:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#832419"
            android:translationX="15dp"
            android:translationY="70dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:text="               -Delgado Romina Soledad : 104218"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:translationY="80dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                    -Lamoureux Emiliano: 112950"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:translationY="90dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:text="Materia:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#832419"
            android:translationX="130dp"
            android:translationY="110dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:text="Tecnología de Programación "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:translationX="80dp"
            android:translationY="120dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Año:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#832419"
            android:translationX="120dp"
            android:translationY="130dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2019"
            android:translationX="190dp"
            android:translationY="110dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departamento de Ciencias e Ingenieria de Computación"
            android:translationX="10dp"
            android:translationY="150dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universidad Nacional del Sur"
            android:translationX="85dp"
            android:translationY="160dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="Bahía Blanca"
            android:translationX="120dp"
            android:translationY="170dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
