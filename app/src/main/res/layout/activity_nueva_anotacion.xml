<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.MovieNote.NuevaAnotacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_tituloPelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de Pelicula "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/campoTitulo"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/button_fecha"
            android:layout_width="138dp"
            android:layout_height="64dp"
            android:onClick="mostrarCalendario"
            android:text="Fecha" />

        <EditText
            android:id="@+id/campoFecha"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:translationX="145dp"
            android:translationY="-50dp" />

        <Button
            android:id="@+id/button_guardar"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:translationX="80dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
